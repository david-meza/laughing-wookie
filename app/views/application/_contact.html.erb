<!-- Contact Section -->
<section id="contact">
  <div class="container">

    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Contact Me</h2>
        <hr class="star-primary">
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <%= form_for @contact_form, id: "contactForm" do |contact_fields| %>

          <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
              <%= contact_fields.label :name, "Name" %>
              <%= contact_fields.text_field :name, class: "form-control", placeholder: "Name", id: "name" %>
              <p class="help-block text-danger"></p>
            </div>
          </div>

          <div class="row control-group">
              <div class="form-group col-xs-12 floating-label-form-group controls">
                  <%= contact_fields.label :email, "Email Address" %>
                  <%= contact_fields.text_field :email, class: "form-control", placeholder: "Email Address", id: "email" %>
                  <p class="help-block text-danger"></p>
              </div>
          </div>

          <div class="row control-group">
              <div class="form-group col-xs-12 floating-label-form-group controls">
                <%= contact_fields.label :message %>
                <%= contact_fields.text_area :message, class: "form-control", placeholder: "Message", rows: "4", id: "message" %>
                  <p class="help-block text-danger"></p>
              </div>
          </div>

          <br>
          <div id="success">
            <%= flash_messages %>
          </div>

          <div class="row">
              <div class="form-group col-xs-6 col-xs-offset-3">
                <%= contact_fields.submit "Email me!", class: "btn btn-success btn-lg btn-block", id: "btnSubmit" %>
              </div>
          </div>
        <% end -%>
      </div>
    </div>
  </div>
</section>