<!-- Contact Section -->
<section id="contact">
  <div class="container">

    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Contact Me</h2>
        <hr class="star-primary">
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">

        <div id="contact-flash"></div>

        <div class="row">
          <div class="col-xs-8 col-xs-offset-2">
            <%= link_to 'Send me a message!', new_contact_form_path, class: "btn btn-success btn-center btn-block", id: "btn-form", remote: true %>
          </div>
        </div>

        <div id = "contact-form"></div>

      </div>
    </div>
  </div>
</section>