<!-- Portfolio Modals -->
<div class="portfolio-modal modal fade" id="portfolioModal1" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-content">
    <div class="close-modal" data-dismiss="modal">
      <div class="lr">
        <div class="rl">
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
          <div class="modal-body">
            <h2>
              Open Source Projects
            </h2>
            <hr class="star-primary">

            <%= image_tag "portfolio/github-octocat.svg", class: "img-rounded", style: "height: 150px" %>
            <p>
              All my projects are open source and hosted in my <%= link_to "Github Profile", 'https://github.com/david-meza' %>. If you would like to learn more about any work that I've done, please reach out and I'll be more than happy to share any details and answer any questions you may have.
            </p>

            <ul class="list-inline item-details">
                <li>Date:
                    <strong>Ongoing
                    </strong>
                </li>
                <li>Platform:
                    <strong><%= link_to "Github", 'https://github.com/david-meza' %>
                    </strong>
                </li>
            </ul>
              <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>